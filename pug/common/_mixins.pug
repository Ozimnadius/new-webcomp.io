mixin icon(iconName, iconClass)
    svg(class=`${iconClass}`)
        use(xlink:href=`images/icons/sprite.svg#${iconName}`)

mixin image(imagePath, imageAlt, imageClass)
    img(src=`images/${imagePath}`, alt=`${imageAlt}`, class=`${imageClass}`)

mixin btn(title)
    .btn
        .btn__title= title
        .btn__lines
            .btn__line-top
            .btn__line-right
            .btn__line-bottom
            .btn__line-left

mixin btn3(title)
    .btn3
        .btn3__title= title
        .btn3__lines
            .btn3__line-topRight
            .btn3__line-right
            .btn3__line-bottomLeft
            .btn3__line-left
            .btn3__line-topLeft

mixin title (first, second, third, dopClass)
    div(class= dopClass).title.title_small
        .title__line
            .title__text= first
        .title__line
            span.title__text.title__text_small= second
            span.title__text= third
