include ../../common/_mixins
include ../../common/_settings

section.bottom

    //- MENU
    .bottom__menu
        .menu.menu_top
            each item in menu
                a(href=item.href).menu__item
                    .menu__item-container
                        .menu__item-title= item.title


    .bottom__wrapper
        //- BEST
        .best
            .best__row

                //- LEFT
                .best__left
                    //- TITLE
                    .best__title лучше, чем конкуренты

                    //- SWITCHES
                    .best__switches
                        a(data-id=1).best__switch.active Создание сайтов
                        .best__switch-button
                        a(data-id=2).best__switch Продвижение

                    //- TABS
                    .best__tabs
                        div(data-id=1).best__tab.active
                            .table
                                .table__thead
                                    each val in tab1.thead
                                        div(class= val.width).table__th= val.title

                                .table__tbody
                                    each val in tab1.tbody
                                        .table__tr
                                            each item in val
                                                div(class= item.width).table__td= item.title

                        div(data-id=2).best__tab
                            .table
                                .table__thead
                                    each val in tab2.thead
                                        div(class= val.width).table__th= val.title

                                .table__tbody
                                    each val in tab2.tbody
                                        .table__tr
                                            each item in val
                                                div(class= item.width).table__td= item.title

                //- RIGHT
                .best__right
                    .best__percents
                        .proportion.proportion_1x1
                        .best__percents-title
                            .best__percents-text на
                            .best__percents-value 70%
                            .best__percents-text лучше

                    .best__button
                        +btn('Заказать сайт')

        //- REVIEWS
        .rev
            .rev__title
                img(src='images/content/reviews.png').rev__title-img

            .rev__slider
                .swiper-container.rev__container
                    .swiper-wrapper
                        each val in reviews
                            .swiper-slide
                                .rev__item

                                    .rev__img
                                        img(src= val.img).rev__img-img

                                    .rev__middle
                                        a(href= val.link data-fancybox).rev__link
                                            +icon('triangle', 'rev__link-svg')

                                    .rev__desc
                                        .rev__item-title= val.title
                                        .rev__text= val.desc

                                    .rev__data
                                        .rev__price= val.price
                                        .rev__date= val.date

        //- BLOG
        .blog
            //- LEFT
            .blog__left
                .blog__list
                    .blog__item
                        .blog__item-date
                            .blog__item-month 03
                            .blog__item-year 10

                        .blog__item-right
                            .blog__item-text Конференция Optimization 2018 пройдет 26-27 ноября в кампусе «Сколково»  ...
                            .blog__item-arrow
                                .seporator
                                    .seporator__line
                                    .seporator__triangle

                    .blog__item
                        .blog__item-date
                            .blog__item-month 16
                            .blog__item-year 10

                        .blog__item-right
                            .blog__item-text Опытные дизайнеры, программисты, верстальщики и специалисты в области ...
                            .blog__item-arrow
                                .seporator
                                    .seporator__line
                                    .seporator__triangle



            //- RIGHT
            .blog__right
                .blog__right-top
                    .blog__title SEO оптимизатор Анатолий Васильев
                    .blog__img
                        .blog__img-wrap
                            img(src='images/content/blogPhoto.jpg').blog__pic
                .blog__desc
