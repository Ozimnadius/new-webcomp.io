extends ../main.first.pug

block variables
    - var title = 'Главная'
    - var pagOff = true
    - var headerOn = true

block content
    .testing
        .container3
            //- START
            .testing-start.active
                //- title
                .testing-start__title
                   .testing-start__title-left
                       +title('Пройдите тест', 'получите', 'скидку', 'title_big')
                   .testing-start__title-right
                       .testing-start__percents
                           .testing-start__percents-val 15
                           .testing-start__percents-type %

                //- subtitle
                .testing-start__subtitle
                    | Узнайте, на сколько хорошо вы знакомы с интернет-маркетингом
                    br
                    | чтобы начать бизнес в сети самостоятельно

                //- start
                button.testing-start__button
                    +btn('Начать тест')

            // -SLIDER
            .testing-slider
                form(action='#' method='post').testing__form.form
                    .swiper-container.testing__swiper
                        .swiper-wrapper.testing__wrapper
                            each slide, index in testingList
                                .swiper-slide
                                    .testing__number= index+1
                                    .testing__slide
                                        .testing__slide-title= slide.title

                                        .testing__fields
                                            each row in slide.questions
                                                .testing__row
                                                    each item in row
                                                        .testing__field
                                                            label.testing__radio
                                                                input(type='radio' name=slide.group value=item).testing__radio-input
                                                                .testing__radio-label= item
                                                                    .testing__radio-fake


                                        .testing__buttons
                                            if slide.buttons.prev
                                                button(type='button').testing__slide-prev
                                                    +btn(slide.buttons.prev)
                                            if slide.buttons.next
                                                button(type='button').testing__slide-next.disabled
                                                    +btn(slide.buttons.next)
                                            if slide.buttons.submit
                                                button(type='submit').testing__slide-submit.disabled
                                                    +btn(slide.buttons.submit)
                                        input(type='hidden' name='action' value='testForm')
                        .testing__pag
                            .swiper-pagination
                            .testing__pag-bottom
                                .testing__pag-percents 0 %
                                .testing__pag-title
                                    span.testing__peg-text Ваша скидка
                                    span.testing__pag-perc  15 %





